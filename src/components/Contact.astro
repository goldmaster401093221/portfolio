---
import { CenterTitle } from "./UI";
import { ContactForm } from "./Preact";
import { ContactArt } from "../assets/SVGs";
import { Image } from "astro:assets";
---

<section
    id="contact"
    class="w-full min-h-screen mb-2 lg:mb-[15em] px-6 py-4 pt-14 bg-background"
>
    <CenterTitle title="Contact" color="primary" />

    <div class="w-full flex_center flex-col p-4 text-[1.2em] text-center">
        <h3
            class="Fade_Up gradientText font-ubuntu text-[2rem] lg:text-[2.4rem]"
        >
            Let's collaborate!
        </h3>
        <p class="Fade_Up">Contact me to discuss your web development needs</p>
        <p class="Fade_Up">or just to say hello. ðŸ˜‰</p>
    </div>

    <div class="w-full flex_center flex-col p-4 text-[1.2em] text-center">
        <p> +1 (582) 272-2635 ( Whatsapp ) </p>
        <p> @unicorn_221631026 ( Telegram ) </p>
        
    </div>
    <div class="w-full flex_center flex-col p-4 text-[1.2em] text-center mt-50">
        <ContactForm client:load />
    </div>

</section>

<script is:inline type="module">
    document.addEventListener("DOMContentLoaded", () => {
        const center = document.querySelector("#socialCircle");
        const images = document.querySelectorAll(".socialIcon");

        if (!center || !images.length) {
            console.error("Social circle or icons not found.");
            return;
        }

        const iconSize = images[0].clientWidth;
        const radius = Math.ceil((center.clientWidth + 2) / 2);

        images.forEach((image, index) => {
            const angle = (index / (images.length - 1)) * Math.PI;
            const x = Math.cos(-angle) * radius - iconSize / 2;
            const y = Math.sin(-angle) * radius - iconSize / 2;

            const imageStyle = image.style;
            const centerWidth = center.offsetWidth;
            const centerHeight = center.offsetHeight;

            imageStyle.left = `${centerWidth / 2 + x}px`;
            imageStyle.top = `${centerHeight / 2 + y}px`;
        });
    });
</script>
